{
  "name": "mongoose-context-ref",
  "version": "2.1.0",
  "main": "lib/index.js",
  "description": "A mongoose plugin which adds a simple `context` or `parent` like relation between a model's document and variable model parent document",
  "homepage": "https://github.com/yamadapc/mongoose-context-ref",
  "bugs": "https://github.com/yamadapc/mongoose-context-ref/issues",
  "keywords": [
    "mongoose",
    "context",
    "references",
    "relations"
  ],
  "author": {
    "name": "Pedro Tacla Yamada",
    "email": "tacla.yamada@gmail.com",
    "url": "github.com/yamadapc"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/yamadapc/mongoose-context-ref"
  },
  "licenses": [
    {
      "type": "MIT"
    }
  ],
  "scripts": {
    "ci": "grunt --verbose; coveralls lcov",
    "test": "grunt",
    "coverage": "mocha -t 0 --require blanket -R html-cov test/*.test.js > coverage.html"
  },
  "config": {
    "blanket": {
      "data-cover-never": "node_modules",
      "pattern": [
        "lib/"
      ],
      "spec-cov": {
        "threshold": 80,
        "localThreshold": 80,
        "lcovOutput": "lcov"
      }
    }
  },
  "devDependencies": {
    "blanket": "1.1.6",
    "coveralls": "^2.10.0",
    "grunt": "~0.4.2",
    "grunt-contrib-jshint": "~0.9.2",
    "grunt-contrib-watch": "~0.6.1",
    "grunt-simple-mocha": "~0.4.0",
    "mocha-spec-cov-alt": "~0.1.0",
    "lodash": "^2.4.1",
    "mongoose": "^3.8.8",
    "should": "~3.2.0",
    "sinon": "~1.9.1",
    "time-grunt": "~0.3.1"
  }
}
